<h1>All Products</h1>
<div><a class="r" href="/products/new">Create a new product</a>
<div><h1>    </h1>
<% @products.each_slice(3) do |three_products| %>
<div class="row">
  <% three_products.each do |product| %>
    <div class="col-md-4">
      <div class="well">
       <h3><a href="/products/<%= product.id%>">Name: <%= product.name %></a></h3>
        <% if product.images.first %>
          <img class="product-image" src="<%= product.images.first.url %>" alt="<%= product.name %>">
        <% else %>
          <p>image coming soon...</p>
        <% end %>
        <p>Mat Price: $<%= product.price %></p>
        <p>Description: <%= product.description %></p>
      </div>
    </div>
<%end%>
</div>
</div>
</div>
<%end%>