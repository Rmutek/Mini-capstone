<h2>Name: <%= @product.name %></h2>
<h4>Made by: <%= @product.supplier.name %></h4>
<p>Category: </p><% @product.categories.each do | category| %> 
<p> <%= category.name %></p>
<% end %> 
<p>Images: </p>
<% @product.images.each do |image| %>
  <img class="product-image" src="<%= image.url %>" alt="">
<% end %>
<p>Mat Price: $<%= @product.price %></p>
<p>Tax: $<%= @product.tax %> </p>
<p>Total: $<%=@product.total %></p>
<p><%= @product.sales_message %></p>
<p>Description: <%= @product.description %></p>

<h4>To purchase please enter the quantity:</h4>
<%= form_tag "/carted_products", method: :post do %> 
<div class="form-group">
<input type="text" name="quantity" id="exampleInputName" placeholder="Quantity"> </div>

<div class="form-group">
  <input type="hidden" name="product_id" id="exampleInputName" placeholder="Product_id" value="<%= @product.id %>" > </div>

<input type="Submit" value="Add to Cart"> 
<% end %> 

<div></div>
<div><a class="btn btn-default" href="/products/<%= @product.id%>/edit">Edit</a></div>
<a class="btn btn-default" href= "/products"> Home Page</a>
<%= form_tag "/products/#{@product.id}", method: :delete do %> 
  <input type="Submit" value="Destroy Yoga Mat">
<% end %>
<div>  </div>


