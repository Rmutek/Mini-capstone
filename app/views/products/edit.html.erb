<h3>Edit Exisiting Yoga Mat</h3>
<%= form_tag "/products/#{@product.id}", method: :patch do %>

<div class="form-group">
  <label for="form_name">Name</label>
  <input type="text" name="form_name" class="form-control" value="<%= @product.name %>" id="form_name" placeholder="Name">
</div>

<div class="form-group">
  <label for="exampleInputImage">Image</label>
  <input type="text" name="form_image" class="form-control" value="<%= @product.image %>" id="exampleInputName" placeholder="Image">
</div>

<div class="form-group">
  <label for="exampleInputPrice">Price</label>
  <input type="text" name="form_price" class="form-control" value="<%= @product.price %>" id="exampleInputName" placeholder="Price">
</div>

<div clas="form-group">
  <label for="exampleInputPrice">Description</label>
  <input type="text" name="form_description" class="form-control" value="<%= @product.description %>" id="exampleInputName" placeholder="Description">
</div>
<input type="submit" class="btn btn-default" value="Submit New Yoga Mat"> 
<% end %> 